<style>
        .profile-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .profile-photo {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 20px;
        }
        .profile-details {
            margin-bottom: 20px;
        }
        .logout-btn {
            background-color: #dc3545;
            color: white;
        }

</style>
 <div class="container profile-container">
        <img src="/uploads/{{user.profileImage}}" alt="Profile Photo" class="profile-photo img-fluid">
        <div class="profile-details">
            <h2>{{user.name}}</h2>
            <p>{{user.email}}</p>
        </div>
        <a href="/logout" class="btn btn-danger logout-btn">Logout</a>
    </div>