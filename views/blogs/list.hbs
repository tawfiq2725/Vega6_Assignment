<div class="container mt-5">
  <h1 class="text-center mb-4">All Blogs</h1>
  <div class="d-flex justify-content-end mb-3">
    <a href="/blogs/add" class="btn btn-primary">Add New Blog</a>
  </div>

  <table class="table table-bordered table-hover text-center">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Image</th>
        <th>Description</th>
        <th>Display</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each blogs}}
        <tr>
          <td>{{this.title}}</td>
          <td>
            {{#if this.image}}
              <img src="/uploads/{{this.image}}" alt="{{this.title}}" class="img-thumbnail" width="100">
            {{/if}}
          </td>
          <td>{{this.description}}</td>
          <td>{{#if this.display}}Yes{{else}}No{{/if}}</td>
          <td>
            <a href="/blogs/edit/{{this._id}}" class="btn btn-sm btn-warning me-2">Edit</a>
            <a href="/blogs/delete/{{this._id}}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this blog?')">Delete</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
