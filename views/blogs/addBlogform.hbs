<div class="container mt-5">
  <h1 class="mb-4">Add New Blog</h1>
  <form action="/blogs/add" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
    <div class="mb-3">
      <label for="title" class="form-label">Title:</label>
      <input type="text" name="title" id="title" class="form-control" required>
      <div class="invalid-feedback">
        Please provide a blog title.
      </div>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description:</label>
      <textarea name="description" id="description" class="form-control" rows="5" required></textarea>
      <div class="invalid-feedback">
        Please provide a blog description.
      </div>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Image:</label>
      <input type="file" name="image" id="image" class="form-control">
      <div class="invalid-feedback">
        Please upload a valid image file.
      </div>
    </div>

    <div class="form-check mb-3">
      <input type="checkbox" name="display" id="display" class="form-check-input">
      <label for="display" class="form-check-label">Display on Home Page:</label>
    </div>

    <button type="submit" class="btn btn-primary">Add Blog</button>
  </form>
</div>

<script>
  (function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')

    Array.prototype.slice.call(forms)
      .forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }

          form.classList.add('was-validated')
        }, false)
      })
  })()
</script>
