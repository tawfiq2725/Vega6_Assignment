<div class="container mt-5">
  <div class="card">
    <div class="card-header text-center">
      <h1>{{blog.title}}</h1>
    </div>
    <div class="card-body">
      {{#if blog.image}}
        <div class="text-center mb-4">
          <img src="/uploads/{{blog.image}}" alt="{{blog.title}}" class="img-fluid rounded" style="max-width: 300px;">
        </div>
      {{/if}}
      <p class="lead">{{blog.description}}</p>
    </div>
    <div class="card-footer text-center">
      <a href="/blogs" class="btn btn-primary">Back to Blog List</a>
    </div>
  </div>
</div>
